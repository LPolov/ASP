@model IEnumerable<OnlineShop.Areas.Admin.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
    Layout = "_Layout";
}

<h2>Pages</h2>
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<p>
    @Html.ActionLink( "Create new page", "AddPage", "Page", null, new {@class="btn btn-success"})
</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Slug</th>
        <th>Slider</th>
        <th></th>
    </tr>
    
    @foreach(var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Slug)</td>
            <td>@Html.DisplayFor(modelItem => item.HasSlider)</td>
            <td>
                @Html.ActionLink("Edit", "EditPage", new {id=item.Id})
                @if (item.Slug != "home")
                {
                    string slash = " | "; 
                    @slash;
                    @Html.ActionLink("Delete", "DeletePage", new {id=item.Id}, new {@class = "delete"})
                }
                
            </td>
        </tr>
    }
</table>
@section Scripts
{
    <script>
        $(function () {
            /*Page delete confirmation*/
            $("a.delete").click(function (){
                if (!confirm("Are you sure that you want to delete this page?")) {
                    return false;
                }
            })
        })
    </script>
}
